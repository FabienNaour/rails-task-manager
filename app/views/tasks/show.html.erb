<div class="container">
  <h1> Edit Tasks</h1>
  <h2> <%= @task.title %></h2>
  <h2><%= @task.details %></h2>
    <%if @task.completed %>
      <p>
        <i class="fas fa-check-circle"></i>
      completed</p>
    <% else %>
      <p>
        <i class="far fa-square"></i>
      not completed</p>
    <% end %>

  <%= link_to "Update", edit_path  , class:"btn btn-primary" %>

</div>


